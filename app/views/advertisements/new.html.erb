<h1>Advertisements#new</h1>
<p>Find me in app/views/advertisements/new.html.erb</p>

<div class="col-md-8">
  <%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: 'form-control', placeholder: 'Ad title goes here' %>
  </div>
  <div class="form-group">
    <%= f.label :copy %>
    <%= f.text_area :copy, rows:8, class: 'form-control', placeholder: 'Ad copy goes here' %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control', placeholder: '$$$' %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
</div>
